<li id="entry-<%= entry.id %>">
  <%= link_to gravatar_for(entry.user), entry.user %> 
  <span class="user"><%= link_to entry.user.name, entry.user %></span></br>
  <span class="title"><strong><%= link_to entry.title, entry %></strong></span>
  <span class="content">
    <%= entry.content %>
  </span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(entry.created_at) %> ago.
    <% if current_user?(entry.user) %>
      <%= link_to "delete", entry, method: :delete,
                                       data: { confirm: "You sure?" } %>
    <% end %>
  </span>
</li>